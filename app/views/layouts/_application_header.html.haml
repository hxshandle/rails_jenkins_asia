  .navbar-inner
    .container
      %a(class="brand" href="#") Jenkins Asia
      .nav-collapse.collapse.navbar-responsive-collapse
        %ul.nav.pull-right
          / Project Menu
          %li
            %a( href=projects_path 
                rel="tooltip"
                data-original-title="Project"
                data-placement="bottom"
              )
              %i.icon-barcode
          / Setting
          %li.dropdown
            %a( class="dropdown-toggle" 
                data-toggle="dropdown" 
                href="#" 
                data-original-title="Settings" 
                rel="tooltip" 
                data-placement="bottom")
              %i.icon-cog
            %ul.dropdown-menu
              %li
